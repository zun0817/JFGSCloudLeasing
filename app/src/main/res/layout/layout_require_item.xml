<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_item_white"
    android:paddingHorizontal="10dp"
    android:paddingVertical="13dp">

    <TextView
        android:id="@+id/require_item_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异型盾构"
        android:textColor="@color/color_010F1D"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/require_item_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="城市"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/require_item_type_tv"
        app:layout_constraintLeft_toRightOf="@id/require_item_type_tv"
        app:layout_constraintTop_toTopOf="@id/require_item_type_tv" />

    <TextView
        android:id="@+id/require_item_length_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="项目长度(m)"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/require_item_type_tv" />

    <TextView
        android:id="@+id/require_item_length_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="50000"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/require_item_length_lab"
        app:layout_constraintLeft_toRightOf="@id/require_item_length_lab"
        app:layout_constraintTop_toTopOf="@id/require_item_length_lab" />

    <TextView
        android:id="@+id/require_item_product_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="12dp"
        android:text="设备品牌"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/require_item_length_tv"
        app:layout_constraintTop_toBottomOf="@id/require_item_type_tv" />

    <TextView
        android:id="@+id/require_item_product_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="中铁装备"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/require_item_length_lab"
        app:layout_constraintLeft_toRightOf="@id/require_item_product_lab"
        app:layout_constraintTop_toTopOf="@id/require_item_length_lab" />

    <TextView
        android:id="@+id/require_item_num_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="需求数量(台)"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/require_item_length_lab" />

    <TextView
        android:id="@+id/require_item_num_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="10"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/require_item_num_lab"
        app:layout_constraintLeft_toRightOf="@id/require_item_num_lab"
        app:layout_constraintTop_toTopOf="@id/require_item_num_lab" />

    <TextView
        android:id="@+id/require_item_geology_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="12dp"
        android:text="地质信息"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/require_item_num_tv"
        app:layout_constraintTop_toBottomOf="@id/require_item_length_lab" />

    <TextView
        android:id="@+id/require_item_geology_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="软土"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/require_item_geology_lab"
        app:layout_constraintLeft_toRightOf="@id/require_item_geology_lab"
        app:layout_constraintTop_toTopOf="@id/require_item_geology_lab" />

    <View
        android:id="@+id/require_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_14707070"
        app:layout_constraintTop_toBottomOf="@id/require_item_num_lab" />

    <TextView
        android:id="@+id/require_item_use_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="预计使用"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/require_view" />

    <TextView
        android:id="@+id/require_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="2021-11-30"
        android:textColor="@color/color_595959"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/require_item_use_lab"
        app:layout_constraintLeft_toRightOf="@id/require_item_use_lab"
        app:layout_constraintTop_toTopOf="@id/require_item_use_lab" />

    <TextView
        android:id="@+id/require_item_look_tv"
        android:layout_width="65dp"
        android:layout_height="27dp"
        android:background="@drawable/shape_look_0e64bc"
        android:gravity="center"
        android:text="查看"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/require_item_time_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/require_item_time_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>