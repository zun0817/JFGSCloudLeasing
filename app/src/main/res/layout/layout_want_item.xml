<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_item_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="13dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/want_item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="异型盾构"
            android:textColor="@color/color_010F1D"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/want_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="2021-12-02"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/want_item_type_tv"
            app:layout_constraintLeft_toRightOf="@id/want_item_type_tv"
            app:layout_constraintTop_toTopOf="@id/want_item_type_tv" />

        <TextView
            android:id="@+id/want_item_length_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="项目长度(m)"
            android:textColor="@color/color_999999"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/want_item_type_tv" />

        <TextView
            android:id="@+id/want_item_length_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="50000"
            android:textColor="@color/color_010F1D"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/want_item_length_lab"
            app:layout_constraintLeft_toRightOf="@id/want_item_length_lab"
            app:layout_constraintTop_toTopOf="@id/want_item_length_lab" />

        <TextView
            android:id="@+id/want_item_product_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="12dp"
            android:text="设备品牌"
            android:textColor="@color/color_999999"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/want_item_length_tv"
            app:layout_constraintTop_toBottomOf="@id/want_item_type_tv" />

        <TextView
            android:id="@+id/want_item_product_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="中铁装备"
            android:textColor="@color/color_010F1D"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/want_item_length_lab"
            app:layout_constraintLeft_toRightOf="@id/want_item_product_lab"
            app:layout_constraintTop_toTopOf="@id/want_item_length_lab" />

        <TextView
            android:id="@+id/want_item_num_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="需求数量(台)"
            android:textColor="@color/color_999999"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/want_item_length_lab" />

        <TextView
            android:id="@+id/want_item_num_tv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="10"
            android:textColor="@color/color_010F1D"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/want_item_num_lab"
            app:layout_constraintLeft_toRightOf="@id/want_item_num_lab"
            app:layout_constraintTop_toTopOf="@id/want_item_num_lab" />

        <TextView
            android:id="@+id/want_item_geology_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="12dp"
            android:text="地质信息"
            android:textColor="@color/color_999999"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/want_item_num_tv"
            app:layout_constraintTop_toBottomOf="@id/want_item_length_lab" />

        <TextView
            android:id="@+id/want_item_geology_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="软土"
            android:textColor="@color/color_010F1D"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/want_item_geology_lab"
            app:layout_constraintLeft_toRightOf="@id/want_item_geology_lab"
            app:layout_constraintTop_toTopOf="@id/want_item_geology_lab" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/want_item_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/shape_want_label_0e64bc"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="已匹配"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>