<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_marginVertical="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/add_picture_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/add_picture_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_launcher_round"
            app:shapeAppearance="@style/roundedCornerStyle" />

        <ImageView
            android:id="@+id/add_picture_delete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add_require_delete"
            android:layout_margin="5dp"
            android:layout_gravity="end"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/add_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_add_require_upload"
        android:visibility="gone" />

</LinearLayout>
