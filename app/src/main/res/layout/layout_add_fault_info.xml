<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_fault_info_Linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F2F4F6"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_fault_downtime_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/add_fault_downtime_frame"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_fault_downtime_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="异常停机时间(h)"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@mipmap/icon_required" />

            </FrameLayout>

            <EditText
                android:id="@+id/add_fault_downtime_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:hint="异常停机时间(h)"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/add_fault_downtime_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_fault_record_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:id="@+id/add_fault_record_frame"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_fault_record_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更换记录"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </FrameLayout>

            <EditText
                android:id="@+id/add_fault_record_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:hint="更换记录"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/add_fault_record_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_fault_model_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:id="@+id/add_fault_model_frame"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_fault_model_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更换型号"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </FrameLayout>

            <EditText
                android:id="@+id/add_fault_model_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:hint="更换型号"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/add_fault_model_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_fault_processtime_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:id="@+id/add_fault_processtime_frame"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_fault_processtime_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="处理时长"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@mipmap/icon_required" />

            </FrameLayout>

            <EditText
                android:id="@+id/add_fault_processtime_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:hint="处理时长"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/add_fault_processtime_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_fault_ring_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:id="@+id/add_fault_ring_frame"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_fault_ring_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="环&#8195;&#8195;号"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@mipmap/icon_required" />

            </FrameLayout>

            <EditText
                android:id="@+id/add_fault_ring_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:hint="环号"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/add_fault_ring_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_fault_site_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:id="@+id/add_fault_site_frame"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_fault_site_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障部位"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:drawablePadding="2dp"
                    app:drawableEndCompat="@mipmap/icon_required" />

            </FrameLayout>

            <EditText
                android:id="@+id/add_fault_site_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:hint="故障部位"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/add_fault_site_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_daily_progress_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/add_daily_progress_frame"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/add_daily_progress_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="项目进度比"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@mipmap/icon_required" />

            </FrameLayout>

            <TextView
                android:id="@+id/add_daily_progress_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="项目进度比"
                android:textColor="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/add_daily_progress_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障描述"
            android:textColor="@color/color_010F1D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:drawablePadding="2dp"
            app:drawableEndCompat="@mipmap/icon_required"/>

        <EditText
            android:id="@+id/add_fault_desc_et"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_view_f2f4f6"
            android:gravity="top"
            android:hint="请输入故障描述..."
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原因分析及处理方式"
            android:textColor="@color/color_010F1D"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_fault_cause_et"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_view_f2f4f6"
            android:gravity="top"
            android:hint="请输入原因分析及处理方式..."
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>