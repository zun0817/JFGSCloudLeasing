<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_item_white"
    android:paddingHorizontal="10dp"
    android:paddingVertical="13dp">

    <TextView
        android:id="@+id/fault_daily_item_creattime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录入时间"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fault_daily_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_14707070"
        app:layout_constraintTop_toBottomOf="@id/fault_daily_item_creattime_tv" />

    <TextView
        android:id="@+id/fault_daily_item_startdate_lab"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="开始日期"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fault_daily_view" />

    <TextView
        android:id="@+id/fault_daily_item_startdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="XXXX-XX-XX"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fault_daily_item_startdate_lab"
        app:layout_constraintLeft_toRightOf="@id/fault_daily_item_startdate_lab"
        app:layout_constraintTop_toTopOf="@id/fault_daily_item_startdate_lab" />

    <TextView
        android:id="@+id/fault_daily_item_progress_lab"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="完成比例"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/fault_daily_item_startdate_tv"
        app:layout_constraintTop_toBottomOf="@id/fault_daily_view" />

    <TextView
        android:id="@+id/fault_daily_item_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="100%"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fault_daily_item_startdate_lab"
        app:layout_constraintLeft_toRightOf="@id/fault_daily_item_progress_lab"
        app:layout_constraintTop_toTopOf="@id/fault_daily_item_startdate_lab" />

    <TextView
        android:id="@+id/fault_daily_item_plandate_lab"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="计划日期"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fault_daily_item_startdate_lab" />

    <TextView
        android:id="@+id/fault_daily_item_plandate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="XXXX-XX-XX"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fault_daily_item_plandate_lab"
        app:layout_constraintLeft_toRightOf="@id/fault_daily_item_plandate_lab"
        app:layout_constraintTop_toTopOf="@id/fault_daily_item_plandate_lab" />

</androidx.constraintlayout.widget.ConstraintLayout>