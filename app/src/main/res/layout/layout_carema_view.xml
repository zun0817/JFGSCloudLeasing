<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_carema_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_60_color"
    android:padding="10dp">

    <Button
        android:id="@+id/layout_carema_quit_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/shape_carema_ededed_view"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_595959"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/layout_carema_photo_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_carema_white_view"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/color_595959"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/layout_carema_album_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/layout_carema_album_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_carema_white_view"
        android:gravity="center"
        android:text="相册"
        android:textColor="@color/color_595959"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/layout_carema_quit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>