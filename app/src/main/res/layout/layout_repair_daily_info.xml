<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/repair_daily_info_Linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F2F4F6"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/repair_daily_datetime_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/repair_daily_datetime_frame"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/repair_daily_datetime_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="录入日期"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@mipmap/icon_required" />

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/repair_daily_datetime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="录入日期"
                android:textColor="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/repair_daily_datetime_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/repair_daily_ratio_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <FrameLayout
                android:id="@+id/repair_daily_ratio_frame"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/repair_daily_ratio_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="完成比例"
                    android:textColor="@color/color_17191C"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@mipmap/icon_required" />

            </FrameLayout>

            <EditText
                android:id="@+id/repair_daily_ratio_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@color/transparent"
                android:hint="完成比例"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textColor="@color/color_262626"
                android:textColorHint="@color/color_BFBFBF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/repair_daily_ratio_frame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical"
        android:padding="12dp">

        <FrameLayout
            android:id="@+id/repair_daily_jobcontent_frame"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/repair_daily_jobcontent_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:text="日工作内容"
                android:textColor="@color/color_17191C"
                android:textSize="15sp"
                android:textStyle="bold"
                app:drawableEndCompat="@mipmap/icon_required" />

        </FrameLayout>

        <EditText
            android:id="@+id/repair_daily_jobcontent_et"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_view_f2f4f6"
            android:gravity="top"
            android:hint="请输入日工作内容..."
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全事故"
            android:textColor="@color/color_010F1D"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repair_daily_safetyaccident_et"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_view_f2f4f6"
            android:gravity="top"
            android:hint="请输入安全事故..."
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需要协调事项"
            android:textColor="@color/color_010F1D"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repair_daily_assistmatter_et"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_view_f2f4f6"
            android:gravity="top"
            android:hint="请输入需要协调事项..."
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/color_010F1D"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/repair_daily_remarks_et"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_view_f2f4f6"
            android:gravity="top"
            android:hint="请输入备注..."
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/color_262626"
            android:textColorHint="@color/color_BFBFBF"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>