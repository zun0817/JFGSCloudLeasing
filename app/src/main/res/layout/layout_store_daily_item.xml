<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_item_white"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="13dp">

    <TextView
        android:id="@+id/store_daily_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检查项"
        android:textColor="@color/color_17191C"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/store_daily_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_arrow_gray"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/store_daily_item_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@id/store_daily_item_img"
        android:text=""
        android:textColor="@color/color_17191C"
        android:textSize="13sp" />

</RelativeLayout>