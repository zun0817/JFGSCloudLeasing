<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_item_white"
    android:paddingHorizontal="10dp"
    android:paddingVertical="13dp">

    <TextView
        android:id="@+id/product_daily_item_creattime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录入时间"
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/product_daily_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_14707070"
        app:layout_constraintTop_toBottomOf="@id/product_daily_item_creattime_tv" />

    <TextView
        android:id="@+id/product_daily_item_length_lab"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="当前掘进(m)"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_daily_view" />

    <TextView
        android:id="@+id/product_daily_item_length_tv"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="500000.0"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/product_daily_item_length_lab"
        app:layout_constraintLeft_toRightOf="@id/product_daily_item_length_lab"
        app:layout_constraintTop_toTopOf="@id/product_daily_item_length_lab" />

    <TextView
        android:id="@+id/product_daily_item_progress_lab"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="项目进度比"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/product_daily_item_length_tv"
        app:layout_constraintTop_toBottomOf="@id/product_daily_view" />

    <TextView
        android:id="@+id/product_daily_item_product_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="100%"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/product_daily_item_length_lab"
        app:layout_constraintLeft_toRightOf="@id/product_daily_item_progress_lab"
        app:layout_constraintTop_toTopOf="@id/product_daily_item_length_lab" />

    <TextView
        android:id="@+id/product_daily_item_rings_lab"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="日环数"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_daily_item_length_lab" />

    <TextView
        android:id="@+id/product_daily_item_rings_tv"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="10"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/product_daily_item_rings_lab"
        app:layout_constraintLeft_toRightOf="@id/product_daily_item_rings_lab"
        app:layout_constraintTop_toTopOf="@id/product_daily_item_rings_lab" />

    <TextView
        android:id="@+id/product_daily_item_totalrings_lab"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="累计环数"
        android:textColor="@color/color_999999"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/product_daily_item_rings_tv"
        app:layout_constraintTop_toBottomOf="@id/product_daily_item_length_lab" />

    <TextView
        android:id="@+id/product_daily_item_totalrings_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="10"
        android:textColor="@color/color_010F1D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/product_daily_item_totalrings_lab"
        app:layout_constraintLeft_toRightOf="@id/product_daily_item_totalrings_lab"
        app:layout_constraintTop_toTopOf="@id/product_daily_item_totalrings_lab" />

</androidx.constraintlayout.widget.ConstraintLayout>