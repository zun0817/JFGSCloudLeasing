<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_launcher_round"
            android:textColor="@color/color_262626"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/update_version_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="为了获得更多服务体验请进行实名认证哦~"
            android:textColor="@color/color_999999"
            android:textSize="13sp"
            android:textStyle="bold"
            android:paddingHorizontal="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_0090FD"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_version_delay_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="稍后更新"
                android:textColor="@color/color_0090FD"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/shape_view_bottomleft_view"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_0090FD"/>

            <TextView
                android:id="@+id/update_version_upgrade_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="立即升级"
                android:textColor="@color/color_0090FD"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/shape_view_bottomright_view"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>